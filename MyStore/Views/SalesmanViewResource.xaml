                    xmlns:local="clr-namespace:MyStore.Views">
    <!-- Sales ListViewItem -->
    <Style x:Key="svSalesListViewItemStyle"
           TargetType="{x:Type ListViewItem}">
        <Setter Property="IsTabStop"
                Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListViewItem}">
                    <Border x:Name="border"
                            CornerRadius="15">
                        <Grid Height="40">
                            <Image x:Name="image"
                                   HorizontalAlignment="Left"
                                   Margin="10 0 10 0"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Stretch="Uniform"
                                   Source="Assets/Icons/sv_sales_b.png"
                                   Height="26"/>
                            <TextBlock x:Name="textblock"
                                       VerticalAlignment="Center"
                                       Margin="46 0 0 0"
                                       Foreground="#3a3a3a"
                                       FontFamily="Arial"
                                       FontWeight="DemiBold"
                                       FontSize="15"
                                       Text="Sales"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="Background"
                                    Value="#c2080f"/>
                            <Setter TargetName="textblock"
                                    Property="Foreground"
                                    Value="#ffffff"/>
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="Assets/Icons/sv_sales_w.png"/>
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="Background"
                                    Value="#c2080f"/>
                            <Setter Property="Focusable"
                                    Value="False"/>
                            <Setter TargetName="textblock"
                                    Property="Foreground"
                                    Value="#ffffff"/>
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="Assets/Icons/sv_sales_w.png"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
